<div class="container">
  <img src="{{logged.coverPic}}"class="profile"></img>
    <i class="fa fa-bars" aria-hidden="true"></i>
  </header>
  <main>
    <div class="row">
      <div class="left col-lg-4">
        <div class="photo-left">
          <img class="photo" src="{{logged.profilePic}}"/>
        </div>
        <h4 class="name">{{logged.username}}</h4>
        <p class="info">{{logged.email}}</p>
        <div class="stats row">
          <div class="stat col-xs-4" style="padding-right: 50px;">
            <p class="number-stat">3,619</p>
            <p class="desc-stat">Followers</p>
          </div>
          <div class="stat col-xs-4">
            <p class="number-stat">42</p>
            <p class="desc-stat">Following</p>
          </div>
          <div class="stat col-xs-4" style="padding-left: 50px;">
            <p class="number-stat">38</p>
            <p class="desc-stat">Blogs</p>
          </div>
        </div>
        <p class="desc">Hi ! My name is {{logged.username}} {{logged.about}}</p>
        <div>
          <span class="follow">Follow</span>
        </div>
        
        <div class="social">
          <a id="icon"class="fa fa-facebook-square" aria-hidden="true" href="https://facebook.com"></a>
          <a id="icon"class="fa fa-twitter-square" aria-hidden="true"href="https://twitter.com"></a>
        </div>
      </div>



      
      <div class="right col-lg-8">
         <div class="row gallery">
             <div class="row gallery">
          {{#each theUser.blogs}}
           <div class="col-md-4">
             <img onClick="onClick(this)"src="{{this.imageURL}}"/>
                  <div id="modal01" class="modal" onclick="">
                      <div class="modal-content">
                          <h1>{{this.title}}</h1>
                        <span class="close"  onclick="this.parentElement.parentElement.style.display='none'">&times;</span>
                        <img src="{{this.imageURL}} "id="img01" style="max-width: 100%">
                        <p id="img01">{{this.message}}</p>
                      
                      </div>
                    </div>
               </div>
          {{/each}}
        </div>
      </div>
  </main>
</div>


